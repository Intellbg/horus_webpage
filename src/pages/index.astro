---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
import Section from "../components/Section.astro";
import sections from "../data/cuidado_facial.json";
---

<Layout title="HORUS" />

<main class="scroll">
  <NavigationBar
    items={sections.map((data) => {
      return data.nav;
    })}
  />
  <div class="scrolleable">
    <Section
      title="Â¿Te atreves a vivir la experiencia?"
      background="/images/cover.jpg"
      nav=""
      showButton={false}
    />

    {
      sections.map((data) => (
        <Section
          title={data.title}
          cost={data.cost}
          background={data.background}
          nav={data.nav}
        />
      ))
    }
  </div>
</main>

<style>
  .hero {
    height: 100%;
  }
  .scrolleable {
    height: 100vh;
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
  .scrolleable::-webkit-scrollbar {
    display: none;
  }
  body::-webkit-scrollbar {
    display: none;
  }
  img {
    display: block;
    height: 100%;
    width: 100%;
  }
</style>
