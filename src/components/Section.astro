---
export interface Props {
  title: string;
  cost?: number;
  background: string;
  nav: string;
  showButton?: boolean;
}

const { title, cost, background, nav, showButton = true } = Astro.props;
---

<div class="hero scrollpage">
  <img src={background} alt={title} id={nav} />
  <div class="head-title">
    <h1 class="is-size-1">{title}</h1>{
      cost && (
        <p>
          <u> desde ${cost}</u>
        </p>
      )
    }
  </div>
  {
    showButton && (
      <a
        href="https://api.whatsapp.com/send/?phone=593984187869&text&type=phone_number&app_absent=0"
        class="button"
      >
        Ordena ahora
      </a>
    )
  }
</div>

<style>
  .scrollpage {
    height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }
  .hero {
    height: 100%;
    position: relative;
  }
  img {
    height: 100vh;
    width: 100%;
  }
  .head-title {
    position: absolute;
    position: absolute;
    width: 100%;
    top: 10%;
    text-align: center;
  }
  h1 {
    width: 100%;
    color: white;
    font-style: normal;
    font-weight: 700;
  }
  p {
    color: white;
    text-align: center;
  }
  .button {
    border-style: none;
    color: white;
    position: relative;
    bottom: 10%;
    padding-left: 2em;
    padding-right: 2em;
    width: fit-content;
    background: #101820;
    font-size: 1.25em;
    left: 50%;
    transform: translateX(-50%);
  }
  .button:hover {
    color: white;
    background-color: #ad7600;
  }
</style>
